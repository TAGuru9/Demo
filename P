Sub ExportFormattedQADataToWord()
    Dim wdApp As Object
    Dim wdDoc As Object
    Dim ws As Worksheet
    Dim lastRow As Long
    Dim i As Long
    Dim para As Object
    Dim statusText As String
    Dim r As Object
    
    ' Setup
    Set ws = ThisWorkbook.Sheets(1)
    lastRow = ws.Cells(ws.Rows.Count, "A").End(xlUp).Row

    ' Launch Word
    Set wdApp = CreateObject("Word.Application")
    wdApp.Visible = True
    Set wdDoc = wdApp.Documents.Add

    ' Add numbered list
    For i = 2 To lastRow
        If Trim(ws.Cells(i, "A").Value) <> "" Then
            ' Add heading
            Set para = wdDoc.Paragraphs.Add
            para.Range.Text = ws.Cells(i, "A").Value & " â€“ RFC# " & ws.Cells(i, "C").Value
            para.Range.ListFormat.ApplyNumberDefault

            ' Add bullet points
            Set para = wdDoc.Paragraphs.Add
            para.Range.Text = "Overall Status: " & ws.Cells(i, "B").Value
            para.Range.ListFormat.ApplyBulletDefault
            Set r = para.Range.Words(3) ' "Green"/"Red"/"Yellow"
            Select Case LCase(ws.Cells(i, "B").Value)
                Case "green"
                    r.HighlightColorIndex = 4 ' Light Green
                Case "red"
                    r.HighlightColorIndex = 6 ' Light Red
                Case "yellow"
                    r.HighlightColorIndex = 7 ' Yellow
            End Select

            para = wdDoc.Paragraphs.Add: para.Range.Text = "Tower: " & ws.Cells(i, "D").Value: para.Range.ListFormat.ApplyBulletDefault
            para = wdDoc.Paragraphs.Add: para.Range.Text = "IA Team: " & ws.Cells(i, "E").Value: para.Range.ListFormat.ApplyBulletDefault
            para = wdDoc.Paragraphs.Add: para.Range.Text = "Status: " & ws.Cells(i, "F").Value: para.Range.ListFormat.ApplyBulletDefault
            para = wdDoc.Paragraphs.Add: para.Range.Text = "QA Start: " & Format(ws.Cells(i, "G").Value, "mm/dd/yyyy"): para.Range.ListFormat.ApplyBulletDefault
            para = wdDoc.Paragraphs.Add: para.Range.Text = "Actual QA End: " & Format(ws.Cells(i, "I").Value, "mm/dd/yyyy"): para.Range.ListFormat.ApplyBulletDefault
            para = wdDoc.Paragraphs.Add: para.Range.Text = "Prod Date: " & Format(ws.Cells(i, "K").Value, "mm/dd/yyyy"): para.Range.ListFormat.ApplyBulletDefault
            para = wdDoc.Paragraphs.Add: para.Range.Text = "Defects: " & ws.Cells(i, "P").Value: para.Range.ListFormat.ApplyBulletDefault
            para = wdDoc.Paragraphs.Add: para.Range.Text = "Total TCs: " & ws.Cells(i, "Q").Value: para.Range.ListFormat.ApplyBulletDefault
            para = wdDoc.Paragraphs.Add: para.Range.Text = "Automated TCs: " & ws.Cells(i, "R").Value: para.Range.ListFormat.ApplyBulletDefault

            ' Add line space
            wdDoc.Paragraphs.Add
        End If
    Next i

    MsgBox "QA status exported to Word with formatting and highlights!", vbInformation
End Sub
