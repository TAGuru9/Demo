$libA = "C:\pepperware-2.0-SNAPSHOT\lib"
$libB = "C:\pepperware-2.0-SNAPSHOT\new_lib"

# Get just the file names as strings
$jarA = Get-ChildItem -Path $libA -Filter *.jar | ForEach-Object { $_.Name }
$jarB = Get-ChildItem -Path $libB -Filter *.jar | ForEach-Object { $_.Name }

# Make sure comparison is case-insensitive
$missingInB = $jarA | Where-Object { $jarB -notcontains $_ }

# Show only truly missing jars
Write-Host "JARs in libA but missing in libB:`n"
foreach ($jar in $missingInB) {
    Write-Host "- $jar"
}
